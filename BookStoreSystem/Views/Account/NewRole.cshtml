@model RoleModel
@{
    Layout = "~/Views/Shared/layoutPage.cshtml";
}
<div class="row" style=" background-color: #2b2727; padding: 2px; text-align:center ">
    <div class="col-lg-12" style=" color:white; font-size:30px;font-weight:bold;margin-bottom:5px; ">
        New Role
    </div>

</div>
<div class="row">
    <div class="col-lg-offset-2">
        <form method="post">
            <div class="row" style=" margin-top:5px">
                <div class="form-group">
                    <div class="col-lg-6">
                        <span>Role Name</span>
                        <input type="text" class="form-control" asp-for="Name" />

                    </div>
                </div>

            </div>


            <div class="row" style=" margin-top:5px">
                <div class="col-lg-12">
                    <input type="submit" value="Add Role" class="btn btn-primary" asp-action="SaveRole" />
                </div>
            </div>
        </form>
    </div>
</div>