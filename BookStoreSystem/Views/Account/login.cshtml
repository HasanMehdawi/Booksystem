@model SignInModel
@{
    Layout = "~/Views/Shared/layoutPage.cshtml";
}
<div class="row" style=" background-color: #2b2727; padding: 2px; text-align:center ">
    <div class="col-lg-12" style=" color:white; font-size:30px;font-weight:bold;margin-bottom:5px; ">
        LogIn
    </div>

</div>
<div class="row">
    <div class="col-lg-offset-2">
        <form method="post">
            <div class="row" style=" margin-top:5px">
                <div class="form-group">
                    <div class="col-lg-6">
                        <span>username</span>
                        <input type="text" class="form-control" asp-for="userName" />

                    </div>
                </div>

            </div>

            <div class="row" style=" margin-top:5px">
                <div class="form-group">
                    <div class="col-lg-6">
                        <span>Password</span>
                        <input type="password" class="form-control" asp-for="password" />

                    </div>
                </div>

            </div>
            <div class="row" style=" margin-top:5px">
                <div class="form-group">
                    <div class="col-lg-6">
                        <span>Remember Me</span>
                        <input type="checkbox" class="checkbox" asp-for="RememberMe" />

                    </div>
                </div>

            </div>

            <div class="row" style=" margin-top:5px">
                <div class="col-lg-12">
                    <input type="submit" value="SignIn" class="btn btn-primary" asp-action="checkPassword" />
                </div>
            </div>
        </form>
    </div>
</div>