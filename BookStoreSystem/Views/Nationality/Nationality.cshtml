@model Nationality
@{
    Layout = "~/Views/Shared/layoutPage.cshtml";
}

<div class="row" style=" background-color: #2b2727; padding: 2px; text-align:center ">
    <div class="col-lg-12" style=" color:white; font-size:30px;font-weight:bold;margin-bottom:5px; ">
        Nationality
    </div>

</div>

<form method="post">
    <div class="row" style="margin:5px;">
        <div class="form-group">
            <div class="col-lg-1" style="font-weight:bold">
                <lable for="nat" > Nationality</lable>
            </div>
            <div class="col-lg-4">
                <input type="text" class="form-control" placeholder="Add Nationality" id="nat" asp-for="Name" />
            </div>
        </div>
        <div class="col-lg-2">

            <input type="submit" value="Add" asp-action="save" class="btn btn-primary" style=" margin-top: -17px; width: 100px" />
        </div>
    </div>

</form>
            